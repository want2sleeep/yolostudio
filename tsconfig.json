{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@my-school-club/ui": ["./packages/ui/src"],
      "@my-school-club/utils": ["./packages/utils/src"],
      "@my-school-club/types": ["./packages/types/src"]
    }
  },
  "exclude": ["node_modules", "**/dist/**", "**/.*/"]
}